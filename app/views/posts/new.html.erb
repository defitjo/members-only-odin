<h1 class="text-center">New Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>

    <p>
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
    </p>

    <p class="form-group">
      <%= f.label :body %><br />
      <textarea class="form-control" rows="5"></textarea>
    </p>

    <p>
      <%= f.submit %>
    </p>

    <% end %>
  </div>
</div>